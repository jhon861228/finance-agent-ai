---
const username = Astro.cookies.get("username")?.value;
const token = Astro.cookies.get("token")?.value;

import Layout from "../../layouts/Layout.astro";
import PageHeader from "../../components/PageHeader.astro";
import ExpenseItem from "../../components/ExpenseItem.astro";
import "../../styles/components.css";

import {
    getGroupDetails,
    getUserByUsername,
    type Expense,
    type User,
} from "../../lib/db";
import { simplifyDebts } from "../../lib/debt";

const { id } = Astro.params;

if (!id || !username || !token) {
    if (!token) Astro.cookies.delete("username");
    return Astro.redirect("/");
}

const group = await getGroupDetails(id, token);
const currentUser = await getUserByUsername(username, token);

if (!group || !currentUser) {
    Astro.cookies.delete("token");
    Astro.cookies.delete("username");
    return Astro.redirect("/");
}

// Use projected stats
const totalSpent = group.totalSpent || 0;
const perPersonShare = totalSpent / (group.members.length || 1);

const memberBalances: Record<string, number> = {};
group.balances.forEach((b) => {
    memberBalances[b.userId] = b.netBalance || 0;
});

const transactions = group.settlements || [];

// Map User IDs to Names for display
const idToName: Record<string, string> = {};
group.members.forEach((m) => {
    idToName[m.userId] = m.name;
});
---

<Layout title={`Group: ${group.name}`}>
    <div class="premium-group-detail">
        <PageHeader
            username={username}
            title={group.name}
            showBack={true}
            backUrl="/dashboard"
        />

        <!-- Stats Grid -->
        <section class="group-stats-luxury">
            <div class="stat-luxury-card">
                <span class="stat-l-label">TOTAL SPENT</span>
                <span class="stat-l-val gold-text"
                    >${totalSpent.toFixed(2)}</span
                >
            </div>
            <div class="stat-luxury-card">
                <span class="stat-l-label">YOUR SHARE</span>
                <span class="stat-l-val">${perPersonShare.toFixed(2)}</span>
            </div>
            <div class="stat-luxury-card">
                <span class="stat-l-label">MEMBERS</span>
                <span class="stat-l-val">{group.members.length}</span>
            </div>
        </section>

        <!-- Settlements (Liquidations) -->
        <section class="settlements-luxury">
            <div class="sec-header">
                <h2>LIQUIDATIONS</h2>
                <span class="status-pill settled"
                    >{transactions.length === 0 ? "SETTLED" : "PENDING"}</span
                >
            </div>
            <div class="settlement-cards">
                {
                    transactions.length === 0 ? (
                        <div class="premium-card empty-settlement">
                            <span class="empty-icon">ðŸ¥‚</span>
                            <p>All accounts are perfectly settled.</p>
                        </div>
                    ) : (
                        transactions.map((t) => (
                            <div class="premium-card settlement-card-alt">
                                <div class="settle-flow">
                                    <span class="s-name">
                                        {idToName[t.from] || t.from}
                                    </span>
                                    <span class="s-arrow gold-text">â†’</span>
                                    <span class="s-name">
                                        {idToName[t.to] || t.to}
                                    </span>
                                </div>
                                <div class="settle-amount gold-text">
                                    ${t.amount.toFixed(2)}
                                </div>
                            </div>
                        ))
                    )
                }
            </div>
        </section>

        <!-- Expense History -->
        <section class="group-expenses-luxury">
            <div class="sec-header">
                <h2>TRANSACTION HISTORY</h2>
            </div>
            <div class="luxury-expense-list">
                {
                    group.expenses.length === 0 ? (
                        <p class="muted">No transactions recorded yet.</p>
                    ) : (
                        group.expenses
                            .slice()
                            .reverse()
                            .map((exp) => (
                                <ExpenseItem
                                    description={exp.description}
                                    amount={exp.amount}
                                    category={exp.category}
                                    source="Group"
                                    timestamp={exp.timestamp}
                                    payerName={
                                        idToName[exp.payerId || ""] || "Unknown"
                                    }
                                    isNegative={true}
                                />
                            ))
                    )
                }
            </div>
        </section>

        <!-- Member Balances -->
        <section class="member-balances-luxury">
            <div class="sec-header">
                <h2>MEMBER STATUS</h2>
            </div>
            <div class="balances-grid">
                {
                    group.members.map((m) => {
                        const bal = memberBalances[m.userId];
                        return (
                            <div class="bal-item">
                                <div class="bal-user">
                                    <div class="avatar-xs">
                                        {m.name[0].toUpperCase()}
                                    </div>
                                    <span>{m.name}</span>
                                </div>
                                <span
                                    class={`bal-val ${bal >= 0 ? "positive" : "negative"}`}
                                >
                                    {bal >= 0
                                        ? `+ $${bal.toFixed(2)}`
                                        : `- $${Math.abs(bal).toFixed(2)}`}
                                </span>
                            </div>
                        );
                    })
                }
            </div>
        </section>
    </div>
</Layout>

<style>
    .premium-group-detail {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
    }

    /* Stats Grid */
    .group-stats-luxury {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    .stat-luxury-card {
        background: var(--card-bg);
        border-radius: 20px;
        padding: 1.2rem 1rem;
        border: 1px solid var(--glass-border);
        display: flex;
        flex-direction: column;
        gap: 4px;
        align-items: center;
    }

    .stat-l-label {
        font-size: 0.55rem;
        font-weight: 800;
        color: var(--text-muted);
        letter-spacing: 0.05em;
    }

    .stat-l-val {
        font-family: "Montserrat", sans-serif;
        font-weight: 700;
        font-size: 1rem;
    }

    .settlement-cards {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .empty-settlement {
        text-align: center;
        padding: 2.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        align-items: center;
        color: var(--text-muted);
    }

    .empty-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .settlement-card-alt {
        padding: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .settle-flow {
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

    .s-name {
        font-weight: 700;
        font-size: 0.95rem;
    }

    .s-arrow {
        font-size: 1.2rem;
        font-weight: 400;
    }

    .settle-amount {
        font-size: 1.1rem;
        font-weight: 800;
        font-family: "Montserrat", sans-serif;
    }

    /* Expenses */
    .luxury-expense-list {
        display: flex;
        flex-direction: column;
    }

    /* Balances */
    .balances-grid {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        background: var(--card-bg);
        border-radius: 24px;
        padding: 1.5rem;
        border: 1px solid var(--glass-border);
    }

    .bal-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .bal-user {
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

    .bal-user span {
        font-weight: 600;
        font-size: 0.85rem;
        color: var(--text-muted);
    }

    .bal-val {
        font-weight: 700;
        font-size: 0.85rem;
    }

    .bal-val.positive {
        color: #2ecc71;
    }

    .bal-val.negative {
        color: #e74c3c;
    }
</style>
