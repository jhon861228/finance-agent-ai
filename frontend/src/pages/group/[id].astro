        align-items: center;
        justify-content: center;
        background: #111;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .group-title-container {
        text-align: center;
    }

    .sec-label {
        font-size: 0.6rem;
        letter-spacing: 0.15em;
        color: #666;
        font-weight: 700;
        display: block;
        margin-bottom: 2px;
    }

    .group-header h1 {
        font-size: 1.2rem;
        margin: 0;
    }

    .group-options {
        font-size: 1.5rem;
        color: #444;
    }

    /* Stats Grid */
    .group-stats-luxury {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    .stat-luxury-card {
        background: #0d0d0d;
        border-radius: 20px;
        padding: 1.2rem 1rem;
        border: 1px solid rgba(255, 255, 255, 0.03);
        display: flex;
        flex-direction: column;
        gap: 4px;
        align-items: center;
    }

    .stat-l-label {
        font-size: 0.55rem;
        font-weight: 800;
        color: #555;
        letter-spacing: 0.05em;
    }

    .stat-l-val {
        font-family: "Montserrat", sans-serif;
        font-weight: 700;
        font-size: 1rem;
    }

    /* Settlements */
    .sec-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .sec-header h2 {
        font-size: 0.9rem;
        letter-spacing: 0.05em;
        color: #fff;
    }

    .status-pill {
        font-size: 0.65rem;
        font-weight: 800;
        padding: 4px 10px;
        border-radius: 6px;
    }

    .status-pill.settled {
        background: rgba(46, 204, 113, 0.1);
        color: #2ecc71;
    }

    .settlement-cards {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .empty-settlement {
        text-align: center;
        padding: 2.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        align-items: center;
        color: #666;
    }

    .empty-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .settlement-card-alt {
        padding: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .settle-flow {
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

    .s-name {
        font-weight: 700;
        font-size: 0.95rem;
    }

    .s-arrow {
        font-size: 1.2rem;
        font-weight: 400;
    }

    .settle-amount {
        font-size: 1.1rem;
        font-weight: 800;
        font-family: "Montserrat", sans-serif;
    }

    /* Expenses */
    .luxury-expense-list {
        display: flex;
        flex-direction: column;
    }

    .luxury-expense-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.2rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.03);
    }

    .le-icon {
        width: 48px;
        height: 48px;
