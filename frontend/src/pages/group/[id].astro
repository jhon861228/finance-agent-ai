        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .le-desc {
        font-weight: 700;
        font-size: 0.95rem;
    }

    .le-sub {
        font-size: 0.7rem;
        color: #666;
    }

    .le-val {
        text-align: right;
        display: flex;
        flex-direction: column;
    }

    .le-amount {
        font-weight: 800;
        font-size: 1rem;
        font-family: "Montserrat", sans-serif;
