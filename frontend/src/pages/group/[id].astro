---
import Layout from "../../layouts/Layout.astro";
import {
    getGroupDetails,
    getUserByUsername,
    type Expense,
    type User,
} from "../../lib/db";
import { simplifyDebts } from "../../lib/debt";

const { id } = Astro.params;
const username = Astro.url.searchParams.get("username") || "";

if (!id) return Astro.redirect("/dashboard?username=" + username);

const group = await getGroupDetails(id);
const currentUser = await getUserByUsername(username);

if (!group || !currentUser)
    return Astro.redirect("/dashboard?username=" + username);

// Use projected stats
const totalSpent = group.totalSpent || 0;
const perPersonShare = totalSpent / (group.members.length || 1);

const memberBalances: Record<string, number> = {};
group.balances.forEach((b) => {
    memberBalances[b.userId] = b.netBalance || 0;
});

const transactions = group.settlements || [];

// Map User IDs to Names for display
const idToName: Record<string, string> = {};
group.members.forEach((m) => {
    idToName[m.userId] = m.name;
});
---

<Layout title={`Group: ${group.name}`}>
    <div class="premium-group-detail">
        <!-- Header -->
        <header class="group-header">
            <a href={`/dashboard?username=${username}`} class="back-btn-luxury">
                <span>‚Üê</span>
            </a>
            <div class="group-title-container">
                <span class="sec-label">GROUP ACCOUNT</span>
                <h1 class="gold-text">{group.name}</h1>
            </div>
            <div class="group-options">
                <span>‚ãÆ</span>
            </div>
        </header>

        <!-- Stats Grid -->
        <section class="group-stats-luxury">
            <div class="stat-luxury-card">
                <span class="stat-l-label">TOTAL SPENT</span>
                <span class="stat-l-val gold-text"
                    >${totalSpent.toFixed(2)}</span
                >
            </div>
            <div class="stat-luxury-card">
                <span class="stat-l-label">YOUR SHARE</span>
                <span class="stat-l-val">${perPersonShare.toFixed(2)}</span>
            </div>
            <div class="stat-luxury-card">
                <span class="stat-l-label">MEMBERS</span>
                <span class="stat-l-val">{group.members.length}</span>
            </div>
        </section>

        <!-- Settlements (Liquidations) -->
        <section class="settlements-luxury">
            <div class="sec-header">
                <h2>LIQUIDATIONS</h2>
                <span class="status-pill settled"
                    >{transactions.length === 0 ? "SETTLED" : "PENDING"}</span
                >
            </div>
            <div class="settlement-cards">
                {
                    transactions.length === 0 ? (
                        <div class="premium-card empty-settlement">
                            <span class="empty-icon">ü•Ç</span>
                            <p>All accounts are perfectly settled.</p>
                        </div>
                    ) : (
                        transactions.map((t) => (
                            <div class="premium-card settlement-card-alt">
                                <div class="settle-flow">
                                    <span class="s-name">
                                        {idToName[t.from] || t.from}
                                    </span>
                                    <span class="s-arrow gold-text">‚Üí</span>
                                    <span class="s-name">
                                        {idToName[t.to] || t.to}
                                    </span>
                                </div>
                                <div class="settle-amount gold-text">
                                    ${t.amount.toFixed(2)}
                                </div>
                            </div>
                        ))
                    )
                }
            </div>
        </section>

        <!-- Expense History -->
        <section class="group-expenses-luxury">
            <div class="sec-header">
                <h2>TRANSACTION HISTORY</h2>
            </div>
            <div class="luxury-expense-list">
                {
                    group.expenses.length === 0 ? (
                        <p class="muted">No transactions recorded yet.</p>
                    ) : (
                        group.expenses
                            .slice()
                            .reverse()
                            .map((exp) => (
                                <div class="luxury-expense-item">
                                    <div class="le-icon">üí∏</div>
                                    <div class="le-meta">
                                        <span class="le-desc">
                                            {exp.description}
                                        </span>
                                        <span class="le-sub">
                                            Paid by{" "}
                                            {idToName[exp.payerId || ""] ||
                                                "Unknown"}{" "}
                                            ‚Ä¢ {exp.category}
                                        </span>
                                    </div>
                                    <div class="le-val">
                                        <span class="le-amount gold-text">
                                            -${exp.amount.toFixed(2)}
                                        </span>
                                        <span class="le-date">
                                            {new Date(
                                                exp.timestamp,
                                            ).toLocaleDateString()}
                                        </span>
                                    </div>
                                </div>
                            ))
                    )
                }
            </div>
        </section>

        <!-- Member Balances -->
        <section class="member-balances-luxury">
            <div class="sec-header">
                <h2>MEMBER STATUS</h2>
            </div>
            <div class="balances-grid">
                {
                    group.members.map((m) => {
                        const bal = memberBalances[m.userId];
                        return (
                            <div class="bal-item">
                                <div class="bal-user">
                                    <div class="avatar-xs">
                                        {m.name[0].toUpperCase()}
                                    </div>
                                    <span>{m.name}</span>
                                </div>
                                <span
                                    class={`bal-val ${bal >= 0 ? "positive" : "negative"}`}
                                >
                                    {bal >= 0
                                        ? `+ $${bal.toFixed(2)}`
                                        : `- $${Math.abs(bal).toFixed(2)}`}
                                </span>
                            </div>
                        );
                    })
                }
            </div>
        </section>
    </div>
</Layout>

<style>
