        display: flex;
        flex-direction: column;
        gap: 1rem;
        background: #0d0d0d;
        border-radius: 24px;
        padding: 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.02);
    }

    .bal-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .bal-user {
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

    .avatar-xs {
        width: 28px;
        height: 28px;
        background: #222;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.6rem;
        font-weight: 800;
        color: #888;
    }

    .bal-user span {
        font-weight: 600;
        font-size: 0.85rem;
        color: #999;
    }

    .bal-val {
        font-weight: 700;
        font-size: 0.85rem;
    }

    .bal-val.positive {
        color: #2ecc71;
    }

    .bal-val.negative {
        color: #e74c3c;
    }
</style>
